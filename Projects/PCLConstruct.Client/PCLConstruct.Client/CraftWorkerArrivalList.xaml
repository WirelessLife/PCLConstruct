<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PCLConstruct.Client.CraftWorkerArrivalList">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="25*" />
      <ColumnDefinition Width="75*" />
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <StackLayout Grid.Column="0" BackgroundColor="#54534A" Grid.RowSpan="2">
      <Label x:Name="AdministratorNameLabel" Text="{Binding AdministratorName}" HorizontalTextAlignment="Start" FontSize="20" TextColor="#FFF" Margin="10, 10, 0, 0"/>
      <ListView x:Name="JobList" HasUnevenRows="True">
        <ListView.ItemTemplate>
          <DataTemplate>
            <ViewCell>
              <ViewCell.View>
                <StackLayout Orientation="Vertical" Padding="10, 5, 10, 5">
                  <Label Text="{Binding ProjectDisplayValue}" TextColor="#FFF" Margin="0,0,0,-8"></Label>
                  <Label Text="{Binding ProjectLocation}" TextColor="#DDD"></Label>
                </StackLayout>
              </ViewCell.View>
            </ViewCell>
          </DataTemplate>
        </ListView.ItemTemplate>
      </ListView>
    </StackLayout>

    <Label x:Name="WelcomeLabel"
           Grid.Column="1"
           Text="Select a project to view list of craftworkers arriving today"
           VerticalOptions="Center"
           HorizontalOptions="Center"
            Grid.Row="1"/>
    <Label x:Name="ListLabel"
           Grid.Column="1"
           Grid.Row="0"
           Text="Craftworkers Arriving Today"
           FontSize="18"
           VerticalOptions="Center"
           HorizontalOptions="Start" />
    <ListView x:Name="CraftWorkerList"
              Grid.Column="1"
              Grid.Row="1"
              HasUnevenRows="True">
      <ListView.ItemTemplate>
        <DataTemplate>
          <ViewCell>
            <ViewCell.View>
              <Grid>
                <Grid.ColumnDefinitions>
                  <ColumnDefinition  Width="Auto" ></ColumnDefinition>
                  <ColumnDefinition  Width="60*" ></ColumnDefinition>
                  <ColumnDefinition  Width="40*" ></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <!--<Label Text="{Binding Status}" Grid.Column="0"></Label>-->
                <Image Source="{Binding ImageName}" Grid.Column="0" WidthRequest="32" HeightRequest="32" VerticalOptions="Center" />
                <Label Text="{Binding CraftWorkerName}" Grid.Column="1" VerticalOptions="Center"></Label>
                <Label Text="{Binding CraftWorkerID}" Grid.Column="2" VerticalOptions="Center"></Label>
              </Grid>
              <!--<StackLayout Orientation="Horizontal">
                <Label Text="{Binding Status}"></Label>
                <Label Text="{Binding CraftWorkerName}"></Label>
              </StackLayout>-->
            </ViewCell.View>
          </ViewCell>
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>
  </Grid>
</ContentPage>